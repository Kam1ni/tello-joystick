{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"target": "es6",
		"outDir": "./dist/",
		"rootDir": "./src",
		"sourceMap": true,
		"removeComments": true,
		"declaration": false,
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.json"
	],
	"exclude": [
		"node_modules",
		"src/client"
	]
}